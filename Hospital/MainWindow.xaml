        <Button x:Name="In" Content="войти" HorizontalAlignment="Left" Margin="283,359,0,0" VerticalAlignment="Top" Click="In_Click"/>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="418,359,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.172,-0.098" Click="Button_Click"/>

    </Grid>
</Window>
