<Window x:Class="Hospital.Windows.MyInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Windows"
        mc:Ignorable="d"
        Title="MyInfo" Height="450" Width="800">
    <Grid Background="#FFADE0E6">
     
        <Button x:Name="back" Content="Назад" HorizontalAlignment="Left" Margin="56,346,0,0" VerticalAlignment="Top" Height="64" Width="230" Click="back_Click"/>
        <Button x:Name="change" Content="Изменить" HorizontalAlignment="Left" Margin="466,349,0,0" VerticalAlignment="Top" Height="57" Width="241" Click="change_Click"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="34,86,10,153" x:Name="data" SelectionChanged="data_SelectionChanged"/>
        <Image MouseLeftButtonDown="bPicture_MouseDown" HorizontalAlignment="Left" Height="52" Margin="10,10,0,0" VerticalAlignment="Top" Width="76" Source="/Windows/png-transparent-hospital-medicine-physician-patient-health-health-logo-medicine-patient.png"/>
    </Grid>
</Window>
