<Window x:Class="Hospital.Windows.ChangeInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Windows"
        mc:Ignorable="d"
        Title="ChangeInfo" Height="450" Width="800">
    <Grid Background="#FFADE0E6">
        
        <GroupBox Header="GroupBox" Margin="0,106,0,162">
            <DataGrid x:Name="date" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="-6,0,-2,0"  Height="121" />
        </GroupBox>
        <Button x:Name="change" Content="Изменить" HorizontalAlignment="Left" Margin="552,337,0,0" VerticalAlignment="Top" Height="55" Width="170" Click="change_Click"/>
        <Button x:Name="back" Content="Назад" HorizontalAlignment="Left" Margin="132,334,0,0" VerticalAlignment="Top" Height="51" Width="217" Click="back_Click"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,295,275,97" Visibility="Hidden" Name="forhelp"/>
        <Image MouseLeftButtonDown="bPicture_MouseDown" HorizontalAlignment="Left" Height="52" Margin="10,10,0,0" VerticalAlignment="Top" Width="76" Source="/Windows/png-transparent-hospital-medicine-physician-patient-health-health-logo-medicine-patient.png"/>

    </Grid>
</Window>
